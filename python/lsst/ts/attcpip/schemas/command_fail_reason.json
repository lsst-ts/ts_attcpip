{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "const": "failReason"
    },
    "sequence_id": {
      "type": "number",
      "description": "The command sequence_id as generated by the CSC."
    },
    "reason": {
      "type": "string",
      "description": "The reason why the command failed."
    },
    "errorDetails": {
      "type": "string",
      "description": "Details of the error."
    }
  },
  "required": [
    "id",
    "sequence_id",
    "reason",
    "errorDetails"
  ],
  "additionalProperties": false
}
